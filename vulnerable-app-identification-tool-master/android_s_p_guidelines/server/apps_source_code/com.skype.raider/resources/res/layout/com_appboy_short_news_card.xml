    <TextView android:id="@+id/com_appboy_short_news_card_domain" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_below="@+id/com_appboy_short_news_card_description" android:layout_alignLeft="@+id/com_appboy_short_news_card_description" style="@style/Appboy_Cards_ShortNews_Domain"/>
