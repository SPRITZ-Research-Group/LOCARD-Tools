<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/com_appboy_feed_read_indicator_holder"/>
    <LinearLayout android:id="@+id/com_appboy_short_news_card_image" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ViewStub android:id="@+id/com_appboy_short_news_card_imageview_stub" android:layout="@layout/com_appboy_stubbed_feed_image_view" style="@style/Appboy_Cards_ShortNews_Image"/>
